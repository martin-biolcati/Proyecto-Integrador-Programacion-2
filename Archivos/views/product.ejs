<%- include('./partials/head')  %>
<%- include('./partials/header')  %>
<!-- product detail -->
<% for(let i=0; i<productos.length; i++){ %> 

<div class="container products-wrapper">
    
    <div class="d-flex align-items-center">
         
        <h2 class="products-title"><%= productos[i].nombre %></h2> 
        <p class="product-detail-description">
            <a href="product-add.html">Editar</a>
        </p>
    </div>
    <div class="product-detail">
    
        <div class="row">
            <article class="col-12 col-lg-8 product-detail-info">
                <img src=<%= productos[i].image %> alt="" class="product-detail-img">
                <p class="product-detail-description"><%= productos[i].descripcion %></p>
            </article>
            <% for(let i=0; i<usuario.length; i++){ %> 
                <% for(let i=0; i<5; i++){ %> 
            <div class="col-12 col-lg-4">
                
                <section class="comments">
                    <article>
                        <img src="https://via.placeholder.com/35" alt="">
                        <div class="data">
                            <p class="user">
                            <strong> <a href="profile.html"><%= usuario[i].nombre %> </a> </strong>
                            <%= comentarios[i].comentario %></p>
                        </div>
                    </article>
                  
                </section>
                <form class="form" action="" method="POST">
                    <input class="form-input" type="text" value="" placeholder="Agregar comentario">
                    <button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
                </form>
                <hr>
            </div>
            <%}%>
            <%}%>
        </div>
    </div>
    <%}%>
</div>

<!-- /product detail -->
<%- include('./partials/footer')  %>
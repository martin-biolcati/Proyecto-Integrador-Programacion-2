<%- include('./partials/head')  %>
<%- include('./partials/header')  %>
<!-- Datos del usuario "https://via.placeholder.com/150"-->
<section class="info-usuario container products-wrapper">
    <div class="row">
        <div class="img-container offset-3 col-2">
            <img src= "/images/fotoPerfil.jpg" alt="foto de perfil" class="foto-perfil">
        </div>
        <div class="data-container col-6">
            <div class="d-flex align-items-center ">
                <h1 class="main-title"><%= comentarios[0].nombre %>
                    <a href="/users/editar">
                        <i class="fas fa-cog"></i>
                    </a>
                </h1>
                <a class="btn mt-3 ml-4" href="">SEGUIR</a>
            </div>
            <div>
                <ul class="usuario">
                    <li>4 productos</li>
                    <li>200 seguidores</li>
                    <li>300 comentarios</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<!-- /Datos del usuario -->

<!-- Mis productos -->
<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <h2 class="products-title">Novedades</h2>
        </div>
        <% for(let i = 0; i<4; i++){ %>
        <div class="col-12 col-sm-6 col-lg-3">
            <section class="product-box">
                <a href="/productos/descripcion">
                    <figure class="product-box_image">
                        <img src=<%= productos[i].image %> alt="foto de <%= productos[i].nombre %>">
                    </figure>
                    <article class="product-box_data">
                        <h2><%= productos[i].nombre %></h2>
                        <p><%= productos[i].descripcion %></p>
                        <p>comentarios: </p>

                    </article>
                </a>
            </section>
            </div>
            <%}%>
</div>
<!-- /Mis productos -->

<%- include('./partials/footer')  %>